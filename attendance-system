  <p>Welcome! Click below to mark your attendance.</p>
  <button onclick="markAttendance()">Mark Attendance</button>

  <p id="status"></p>

  <script>
    function markAttendance() {
      const time = new Date().toLocaleTimeString();
      document.getElementById('status').innerText = "Attendance marked at " + time;
    }
  </script>
